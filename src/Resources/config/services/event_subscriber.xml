<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="setono_sylius_plausible.event_subscriber.add_payment_info"
                 class="Setono\SyliusPlausiblePlugin\EventSubscriber\AddPaymentInfoSubscriber">
            <argument type="service" id="setono_sylius_plausible.event_bus"/>

            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="setono_sylius_plausible.event_subscriber.add_shipping_info"
                 class="Setono\SyliusPlausiblePlugin\EventSubscriber\AddShippingInfoSubscriber">
            <argument type="service" id="setono_sylius_plausible.event_bus"/>

            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="setono_sylius_plausible.event_subscriber.begin_checkout"
                 class="Setono\SyliusPlausiblePlugin\EventSubscriber\BeginCheckoutSubscriber">
            <argument type="service" id="setono_sylius_plausible.event_bus"/>
            <argument type="service" id="sylius.context.cart"/>

            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="setono_sylius_plausible.event_subscriber.purchase"
                 class="Setono\SyliusPlausiblePlugin\EventSubscriber\PurchaseSubscriber">
            <argument type="service" id="setono_sylius_plausible.event_bus"/>
            <argument type="service" id="sylius.repository.order"/>

            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
